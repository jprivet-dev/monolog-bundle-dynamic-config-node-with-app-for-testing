root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 800
tab_width = 4
trim_trailing_whitespace = true

[{*.css,*.scss}]
indent_size = 2
tab_width = 2

[{*.dist,.bowerrc,.sasslintrc,package.json}]
indent_size = 2
tab_width = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[phpunit.xml.dist]
indent_size = 4
tab_width = 4
